
@{
    ViewData["Title"] = "Select";
}

<h1>Select</h1>
<div class="form-floating">
    <select class="form-select" id="citySelect">
        <option selected>請選擇</option>
    </select>
    <label for="citySelect">縣市</label>
</div>
<div id="divShow" class="alert alert-info"></div>

@section Styles{
    <style></style>
}

@section Scripts{
    <script>
        const select = document.querySelector('#citySelect');
        const div = document.querySelector('#divShow');
        const cities = ["台北市", "新北市", "桃園市", "台中市", "台南市", "高雄市"]

        const selects = cities.map(x=>{
            return `<option value=${x}>${x}</option>`
        })
        select.innerHTML +=selects.join("");

        select.addEventListener('change',()=>{
            div.innerHTML = select.value;
        })
    </script>
}

